<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomerSide.ProfilePageActivity">


        <TextView
            android:id="@+id/background_rec"
            android:layout_width="353dp"
            android:layout_height="591dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/background"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.506" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="117dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profileID"
            android:layout_width="126dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="60dp"
            android:text="Student ID :       "
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/profileName"
            app:layout_constraintStart_toStartOf="@+id/background_rec" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="55dp"
            android:text="Name :       "
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/profileEmail"
            app:layout_constraintStart_toStartOf="@+id/background_rec" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="61dp"
            android:text="Email :       "
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/profilePhone"
            app:layout_constraintStart_toStartOf="@+id/background_rec" />

        <TextView
            android:id="@+id/profilePhone"
            android:layout_width="172dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="64dp"
            android:text="Phone No :       "
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/profileWallet"
            app:layout_constraintStart_toStartOf="@+id/background_rec" />

        <TextView
            android:id="@+id/profileWallet"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="116dp"
            android:text="Balance :       "
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/background_rec"
            app:layout_constraintStart_toStartOf="@+id/background_rec" />

        <TextView
            android:id="@+id/displayID"
            android:layout_width="204dp"
            android:layout_height="34dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="56dp"
            android:text="-"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/displayName"
            app:layout_constraintEnd_toEndOf="@+id/background_rec" />

        <TextView
            android:id="@+id/displayName"
            android:layout_width="204dp"
            android:layout_height="34dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="55dp"
            android:text="-"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/displayEmail"
            app:layout_constraintEnd_toEndOf="@+id/background_rec" />

        <TextView
            android:id="@+id/displayEmail"
            android:layout_width="204dp"
            android:layout_height="34dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="58dp"
            android:text="-"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/displayPhone"
            app:layout_constraintEnd_toEndOf="@+id/background_rec" />

        <TextView
            android:id="@+id/displayPhone"
            android:layout_width="204dp"
            android:layout_height="34dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="60dp"
            android:text="-"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/displayBalance"
            app:layout_constraintEnd_toEndOf="@+id/background_rec" />

        <TextView
            android:id="@+id/displayBalance"
            android:layout_width="204dp"
            android:layout_height="34dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="128dp"
            android:text="-"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/background_rec"
            app:layout_constraintEnd_toEndOf="@+id/background_rec" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:elevation="2dp"
            app:itemBackground="@android:color/white"
            app:itemIconSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/bottom_navigation_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#49C69F"
            android:text="Update"
            app:layout_constraintBottom_toBottomOf="@+id/background_rec"
            app:layout_constraintStart_toStartOf="@+id/background_rec" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E91E63"
            android:text="Logout"
            app:layout_constraintBottom_toBottomOf="@+id/background_rec"
            app:layout_constraintEnd_toEndOf="@+id/background_rec" />

        <Button
            android:id="@+id/topupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="68dp"
            android:text="Top Up"
            app:backgroundTint="#090909"
            app:layout_constraintBottom_toBottomOf="@+id/background_rec"
            app:layout_constraintEnd_toEndOf="@+id/background_rec" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>