<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RestaurantHomeActivity">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/viewSalesBtn"
            android:layout_width="164dp"
            android:layout_height="49dp"
            android:layout_marginStart="123dp"
            android:layout_marginTop="77dp"
            android:text="Sales List"
            android:backgroundTint="#0099FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/viewFoodBtn"
            android:layout_width="162dp"
            android:layout_height="59dp"
            android:layout_marginStart="123dp"
            android:layout_marginTop="35dp"
            android:text="Food List"
            android:backgroundTint="#0099FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSalesBtn" />

        <Button
            android:id="@+id/restaurantLogoutBtn"
            android:layout_width="109dp"
            android:layout_height="49dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#0099FF"
            android:text="Log out"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewFoodBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>