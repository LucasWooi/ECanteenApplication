<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Student.StudentListAdapter"
        android:id="@+id/card_view_3"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFF99"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/card_walletBalance"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="29dp"
                android:text="Wallet Balance : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_phone" />

            <TextView
                android:id="@+id/card_phone"
                android:layout_width="182dp"
                android:layout_height="27dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_PhoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/card_EmailAdd" />

            <TextView
                android:id="@+id/card_PhoneNumber"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:text="Phone Number : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_EmailAdd" />

            <TextView
                android:id="@+id/card_email"
                android:layout_width="183dp"
                android:layout_height="26dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="28dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_EmailAdd"
                app:layout_constraintTop_toBottomOf="@+id/card_StudName" />

            <TextView
                android:id="@+id/card_EmailAdd"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:text="Email Address : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_StudName" />

            <TextView
                android:id="@+id/card_ID"
                android:layout_width="174dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="36dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_StudID"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_StudName"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:text="Student Name : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_StudID" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="180dp"
                android:layout_height="26dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_StudName"
                app:layout_constraintTop_toBottomOf="@+id/card_ID" />

            <TextView
                android:id="@+id/card_StudID"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Student ID : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_balance"
                android:layout_width="182dp"
                android:layout_height="26dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="28dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_walletBalance"
                app:layout_constraintTop_toBottomOf="@+id/card_phone" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>