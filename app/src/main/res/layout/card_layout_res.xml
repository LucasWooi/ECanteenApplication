<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Restaurants.RestaurantListAdapter"
        android:id="@+id/card_view_3"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#6F8FAF"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/card_walletBalance"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="88dp"
                android:text="Wallet Balance : "
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_PhoneNumber" />

            <TextView
                android:id="@+id/card_balance"
                android:layout_width="182dp"
                android:layout_height="27dp"
                android:layout_marginTop="17dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_phone" />

            <TextView
                android:id="@+id/card_PhoneNumber"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:text="Phone Number : "
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_EmailAdd" />

            <TextView
                android:id="@+id/card_phone"
                android:layout_width="183dp"
                android:layout_height="26dp"
                android:layout_marginTop="16dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_email" />

            <TextView
                android:id="@+id/card_EmailAdd"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:text="Email Address : "
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_OwnerName" />

            <TextView
                android:id="@+id/card_email"
                android:layout_width="178dp"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_ownName" />

            <TextView
                android:id="@+id/card_OwnerName"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:text="Owner Name : "
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_ResName" />

            <TextView
                android:id="@+id/card_ownName"
                android:layout_width="180dp"
                android:layout_height="26dp"
                android:layout_marginTop="17dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_name" />

            <TextView
                android:id="@+id/card_ResName"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:text="Restaurant Name : "
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_ResID" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="180dp"
                android:layout_height="26dp"
                android:layout_marginTop="18dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_ID" />

            <TextView
                android:id="@+id/card_ResID"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:text="Restaurant ID : "
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_ID"
                android:layout_width="182dp"
                android:layout_height="26dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>