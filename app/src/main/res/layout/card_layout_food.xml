<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Foods.FoodListAdapter"
        android:id="@+id/card_view_3"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFF99"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/card_res"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                android:text="Restaurant ID : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_price" />

            <TextView
                android:id="@+id/card_displayRes"
                android:layout_width="178dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_displayPrice" />

            <TextView
                android:id="@+id/card_price"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:text="Food Price : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_FoodName" />

            <TextView
                android:id="@+id/card_displayPrice"
                android:layout_width="180dp"
                android:layout_height="26dp"
                android:layout_marginTop="17dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_displayName" />

            <TextView
                android:id="@+id/card_FoodName"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:text="Food Name : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_FoodID" />

            <TextView
                android:id="@+id/card_displayName"
                android:layout_width="180dp"
                android:layout_height="26dp"
                android:layout_marginTop="18dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_displayID" />

            <TextView
                android:id="@+id/card_FoodID"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:text="Food ID : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_displayID"
                android:layout_width="182dp"
                android:layout_height="26dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>